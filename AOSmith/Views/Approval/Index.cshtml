@{
    ViewBag.Title = "Approval";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-check-circle me-2"></i>
                Pending Approvals
            </h2>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Stock Adjustment Approvals</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered" id="approvalTable">
                            <thead class="table-light">
                                <tr>
                                    <th>Document Ref</th>
                                    <th>Date</th>
                                    <th>Department</th>
                                    <th>Item</th>
                                    <th>From Location</th>
                                    <th>To Location</th>
                                    <th>Quantity</th>
                                    <th>Reason</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="10" class="text-center">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-2">Loading pending approvals...</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-labelledby="approvalModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="approvalModalLabel">Approval Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="approvalForm">
                    <input type="hidden" id="approvalId" />
                    <input type="hidden" id="approvalAction" />

                    <div class="mb-3">
                        <label for="approvalRemarks" class="form-label">Remarks</label>
                        <textarea class="form-control" id="approvalRemarks" rows="3" placeholder="Enter remarks..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="btnApprove">
                    <i class="bi bi-check-circle me-1"></i> Approve
                </button>
                <button type="button" class="btn btn-danger" id="btnReject">
                    <i class="bi bi-x-circle me-1"></i> Reject
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadPendingApprovals();

            // Approve button click
            $(document).on('click', '.btn-approve', function () {
                var id = $(this).data('id');
                $('#approvalId').val(id);
                $('#approvalAction').val('approve');
                $('#approvalModalLabel').text('Approve Stock Adjustment');
                $('#btnApprove').show();
                $('#btnReject').hide();
                $('#approvalModal').modal('show');
            });

            // Reject button click
            $(document).on('click', '.btn-reject', function () {
                var id = $(this).data('id');
                $('#approvalId').val(id);
                $('#approvalAction').val('reject');
                $('#approvalModalLabel').text('Reject Stock Adjustment');
                $('#btnApprove').hide();
                $('#btnReject').show();
                $('#approvalModal').modal('show');
            });

            // Approve action
            $('#btnApprove').click(function () {
                processApproval('approve');
            });

            // Reject action
            $('#btnReject').click(function () {
                processApproval('reject');
            });
        });

        function loadPendingApprovals() {
            $.ajax({
                url: '@Url.Action("GetPendingApprovals", "Approval")',
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        displayApprovals(response.data);
                    } else {
                        showError('Failed to load approvals: ' + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    showError('Error loading approvals: ' + error);
                }
            });
        }

        function displayApprovals(approvals) {
            var tbody = $('#approvalTable tbody');
            tbody.empty();

            if (approvals && approvals.length > 0) {
                $.each(approvals, function (index, item) {
                    var row = '<tr>' +
                        '<td>' + (item.DocumentReference || 'N/A') + '</td>' +
                        '<td>' + formatDate(item.Date) + '</td>' +
                        '<td>' + (item.Department || '') + '</td>' +
                        '<td>' + (item.ItemName || '') + '</td>' +
                        '<td>' + (item.FromLocation || '') + '</td>' +
                        '<td>' + (item.ToLocation || '') + '</td>' +
                        '<td>' + (item.Quantity || 0) + '</td>' +
                        '<td>' + (item.Reason || '') + '</td>' +
                        '<td><span class="badge bg-warning">Pending</span></td>' +
                        '<td>' +
                        '<button class="btn btn-sm btn-success btn-approve me-1" data-id="' + item.Id + '" title="Approve">' +
                        '<i class="bi bi-check-circle"></i>' +
                        '</button>' +
                        '<button class="btn btn-sm btn-danger btn-reject" data-id="' + item.Id + '" title="Reject">' +
                        '<i class="bi bi-x-circle"></i>' +
                        '</button>' +
                        '</td>' +
                        '</tr>';
                    tbody.append(row);
                });
            } else {
                tbody.html('<tr><td colspan="10" class="text-center">No pending approvals found.</td></tr>');
            }
        }

        function processApproval(action) {
            var id = $('#approvalId').val();
            var remarks = $('#approvalRemarks').val();

            if (action === 'reject' && !remarks.trim()) {
                alert('Please enter remarks for rejection.');
                return;
            }

            $.ajax({
                url: '@Url.Action("ProcessApproval", "Approval")',
                type: 'POST',
                data: {
                    id: id,
                    action: action,
                    remarks: remarks
                },
                success: function (response) {
                    if (response.success) {
                        $('#approvalModal').modal('hide');
                        $('#approvalRemarks').val('');
                        showSuccess(response.message);
                        loadPendingApprovals();
                    } else {
                        showError(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    showError('Error processing approval: ' + error);
                }
            });
        }

        function formatDate(dateString) {
            if (!dateString) return '';
            var date = new Date(dateString);
            return date.toLocaleDateString('en-GB');
        }

        function showSuccess(message) {
            alert(message);
        }

        function showError(message) {
            alert(message);
        }
    </script>
}
