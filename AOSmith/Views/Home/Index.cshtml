@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center bg-white shadow-sm rounded-3 border p-5 mt-4">
    <h1 class="display-4 fw-bold text-success mb-3">
        <i class="bi bi-database-check"></i> Connection Successful
    </h1>
    <p class="lead">Connected to <strong>(local)</strong> (AOSmith Database)</p>
    <hr class="my-4">

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @ViewBag.Error
        </div>
    }
    else
    {
        <div class="card d-inline-block shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Server Date (Query: SELECT GETDATE())</h5>
            </div>
            <div class="card-body">
                <h2 class="display-6 fw-mono mb-0">@ViewBag.ServerDate</h2>
            </div>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("ManageUsers", "Home")" class="btn btn-primary btn-lg">Go to Dashboard</a>
    </div>
</div>
