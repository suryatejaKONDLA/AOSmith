@{
    ViewBag.Title = "Inventory Adjustments";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Inventory Adjustments</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">New Adjustment</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="validationDefault01" class="form-label">Item SKU</label>
                            <input type="text" class="form-control" id="validationDefault01" placeholder="e.g. SKU-12345" required>
                        </div>
                        <div class="col-md-6">
                            <label for="validationDefault02" class="form-label">Quantity Change</label>
                            <input type="number" class="form-control" id="validationDefault02" placeholder="+10 or -5" required>
                        </div>
                        <div class="col-12">
                            <label for="validationFloatingTextarea2" class="form-label">Reason</label>
                            <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit">Submit Adjustment</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
