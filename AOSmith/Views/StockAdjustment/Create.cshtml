@model AOSmith.Models.StockAdjustmentViewModel
@{
    ViewBag.Title = "Inventory Adjustment Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-boxes"></i> Inventory Adjustment Request
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Header Section -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Request Date</label>
                                <input type="text" class="form-control" id="requestDate" value="@DateTime.Today.ToString("dd-MM-yyyy")" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Requestor</label>
                                <input type="text" class="form-control" id="requestor" value="@Model.CreatedBy" readonly />
                            </div>
                        </div>
                    </div>

                    <!-- Add Item Button -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <button type="button" class="btn btn-success" id="btnAddItem">
                                <i class="fas fa-plus"></i> Add Item
                            </button>
                        </div>
                    </div>

                    <!-- Grid Section -->
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover" id="itemsGrid">
                                    <thead class="thead-light">
                                        <tr>
                                            <th style="width: 5%;">Sr No</th>
                                            <th style="width: 12%;">Item Code</th>
                                            <th style="width: 20%;">Item Description</th>
                                            <th style="width: 12%;">From Location</th>
                                            <th style="width: 12%;">To Location</th>
                                            <th style="width: 15%;">Adjustment Type</th>
                                            <th style="width: 10%;">Qty</th>
                                            <th style="width: 14%;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="itemsTableBody">
                                        <tr id="noDataRow">
                                            <td colspan="8" class="text-center text-muted">No items added yet. Click "Add Item" to begin.</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- File Attachments Section -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="bi bi-paperclip"></i> Attachments
                            </h5>
                            <div class="card border-0 shadow-sm">
                                <div class="card-body p-4">
                                    <div class="row g-3">
                                        @if (ViewBag.FileTypes != null)
                                        {
                                            foreach (var fileType in ViewBag.FileTypes)
                                            {
                                                <div class="col-md-6">
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">
                                                            @fileType.FileTypeName
                                                            @if (fileType.FileTypeRequired)
                                                            {
                                                                <span class="text-danger">*</span>
                                                            }
                                                            <small class="text-muted">(Max: @fileType.FileTypeMaxSizeMb MB)</small>
                                                        </label>
                                                        <div class="input-group">
                                                            <input type="file"
                                                                   class="form-control file-upload"
                                                                   id="file_@fileType.FileTypeId"
                                                                   data-file-type="@fileType.FileTypeId"
                                                                   data-required="@fileType.FileTypeRequired.ToString().ToLower()"
                                                                   data-max-size="@(fileType.FileTypeMaxSizeMb * 1024)"
                                                                   accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx">
                                                            <button class="btn btn-outline-danger btn-clear-file" type="button" data-file-id="@fileType.FileTypeId" style="display:none;">
                                                                <i class="bi bi-x-lg"></i>
                                                            </button>
                                                        </div>
                                                        <small class="text-muted file-name" id="fileName_@fileType.FileTypeId"></small>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Review Data Button -->
                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <button type="button" class="btn btn-primary btn-lg px-5" id="btnReviewData">
                                <i class="bi bi-eye-fill me-2"></i> Review Data
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Item Modal -->
<div class="modal fade" id="itemModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="itemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white border-0">
                <h5 class="modal-title fw-bold" id="itemModalLabel">
                    <i class="bi bi-plus-circle me-2"></i>Add Item
                </h5>
            </div>
            <div class="modal-body p-4">
                <form id="itemForm">
                    <input type="hidden" id="editIndex" value="-1" />
                    <input type="hidden" id="stockRecSno" value="0" />

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="modalRecType" class="form-label fw-semibold">Adjustment Type <span class="text-danger">*</span></label>
                                @Html.DropDownList("RecType", (SelectList)ViewBag.RecTypes, "-- Select Type --", new { @class = "form-control form-select", id = "modalRecType", required = "required" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="modalItemCode" class="form-label fw-semibold">Item <span class="text-danger">*</span></label>
                                <select class="form-control form-select" id="modalItemCode" name="ItemCode" required>
                                    <option value="">-- Loading Items... --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="modalFromLocation" class="form-label fw-semibold">From Location <span class="text-danger">*</span></label>
                                <select class="form-control form-select" id="modalFromLocation" name="FromLocation" required>
                                    <option value="">-- Loading Locations... --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="modalToLocation" class="form-label fw-semibold">To Location <span class="text-danger">*</span></label>
                                <select class="form-control form-select" id="modalToLocation" name="ToLocation" required>
                                    <option value="">-- Loading Locations... --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="modalQty" class="form-label fw-semibold">Quantity <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="modalQty" step="0.001" min="0.001" placeholder="Enter quantity" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label fw-semibold">Item Description</label>
                                <input type="text" class="form-control bg-light" id="modalItemDesc" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 shadow-sm" id="locationMatchWarning" style="display:none;">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Note:</strong> For this adjustment type, From and To locations must be the same.
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0 bg-light p-3">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-primary px-4" id="btnSaveItem">
                    <i class="bi bi-check-circle me-2"></i>Save Item
                </button>
            </div>
        </div>
    </div>
</div>

<!-- TOAST NOTIFICATION CONTAINER -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <!-- Success Toast -->
    <div id="successToast" class="toast align-items-center text-white bg-success border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body fw-semibold">
                <i class="bi bi-check-circle-fill me-2"></i>
                <span id="successToastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

    <!-- Warning Toast -->
    <div id="warningToast" class="toast align-items-center text-white bg-warning border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body fw-semibold">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <span id="warningToastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

    <!-- Error Toast -->
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body fw-semibold">
                <i class="bi bi-x-circle-fill me-2"></i>
                <span id="errorToastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/StockAdjustment.js"></script>
}

<!-- Global Loading Spinner Overlay -->
<div id="globalSpinner" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(255,255,255,0.7); z-index:99999; justify-content:center; align-items:center;">
    <div class="text-center">
        <div class="spinner-border text-primary" style="width:3rem; height:3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 fw-semibold text-primary" id="spinnerMessage">Loading...</p>
    </div>
</div>
