<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Dashboard</title>

    <!-- Bootstrap 5 CSS (Local) -->
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet">
    <!-- Custom Site Overrides -->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet">
    <!-- Bootstrap Icons (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <style>
        /* Select2 - AO Smith green theme */
        .select2-container { width: 100% !important; }
        .select2-container .select2-selection--single { height: 38px; padding: 5px 8px; border: 1px solid #ced4da; border-radius: 0.375rem; background-color: #fff; }
        .select2-container--bootstrap-5 .select2-selection--single .select2-selection__rendered { line-height: 26px; color: #212529; }
        .select2-container--bootstrap-5 .select2-selection--single .select2-selection__arrow { height: 36px; }
        .select2-container--bootstrap-5.select2-container--focus .select2-selection,
        .select2-container--bootstrap-5.select2-container--open .select2-selection { border-color: #004d26 !important; box-shadow: 0 0 0 0.25rem rgba(0,77,38,.25) !important; }
        .select2-dropdown { z-index: 10060; border-color: #ced4da; }
        .select2-results__option--highlighted,
        .select2-results__option--highlighted[aria-selected],
        .select2-results__option--highlighted[aria-selected="true"],
        .select2-results__option--highlighted[aria-selected="false"],
        .select2-container--bootstrap-5 .select2-results__option--highlighted,
        .select2-container--bootstrap-5 .select2-results__option--highlighted[aria-selected],
        .select2-container--default .select2-results__option--highlighted[aria-selected],
        .select2-container--default .select2-results__option--highlighted.select2-results__option--selectable { background-color: rgba(0,77,38,.12) !important; color: #004d26 !important; }
        .select2-results__option[aria-selected="true"],
        .select2-results__option--selected,
        .select2-container--bootstrap-5 .select2-results__option--selected,
        .select2-container--bootstrap-5 .select2-results__option[aria-selected="true"],
        .select2-container--default .select2-results__option--selected { background-color: rgba(0,77,38,.08) !important; color: #004d26 !important; }
        .select2-container--bootstrap-5 .select2-search--dropdown .select2-search__field,
        .select2-search--dropdown .select2-search__field { border: 1px solid #ced4da; border-radius: 0.375rem; padding: 0.375rem 0.75rem; }
        .select2-container--bootstrap-5 .select2-search--dropdown .select2-search__field:focus,
        .select2-search--dropdown .select2-search__field:focus { border-color: #004d26 !important; box-shadow: 0 0 0 0.25rem rgba(0,77,38,.25) !important; outline: none; }
        .select2-results { max-height: 250px; overflow-y: auto; }
    </style>
</head>
<body class="bg-light">

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar (Desktop View: Desktop Column) -->
            <!-- 100vh height, Sticky, Dark Theme -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-none d-md-block bg-dark sidebar collapse" style="min-height: 100vh;">
                <!-- Brand in Sidebar (Visible on Desktop) -->
                <div class="d-flex align-items-center justify-content-center pt-3 pb-3 border-bottom border-secondary">
                    <a class="text-white text-decoration-none fw-bold fs-5" href="#">Admin Panel</a>
                </div>

                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        @if (AOSmith.Helpers.SessionHelper.GetUserId() == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ManageUsers" ? "active bg-primary text-white" : "text-secondary")"
                                   href="@Url.Action("ManageUsers", "Home")">
                                    <i class="bi bi-people me-2"></i>
                                    Manage Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "ApplicationOptions" ? "active bg-primary text-white" : "text-secondary")"
                                   href="@Url.Action("Index", "ApplicationOptions")">
                                    <i class="bi bi-gear-fill me-2"></i>
                                    Application Options
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "StockAdjustment" ? "active bg-primary text-white" : "text-secondary")"
                               href="@Url.Action("Create", "StockAdjustment")">
                                <i class="bi bi-box-seam me-2"></i>
                                Stock Adjustment
                            </a>
                        </li>
                        @if (AOSmith.Helpers.SessionHelper.IsApprover())
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Approval" ? "active bg-primary text-white" : "text-secondary")"
                                   href="@Url.Action("Index", "Approval")">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Approval
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>

            <!-- Sidebar (Mobile View: Offcanvas) -->
            <div class="offcanvas offcanvas-start d-md-none bg-dark text-white" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
                <div class="offcanvas-header border-bottom border-secondary">
                    <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">Admin Panel</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="nav flex-column">
                        @if (AOSmith.Helpers.SessionHelper.GetUserId() == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ManageUsers" ? "active bg-primary text-white" : "text-secondary")"
                                   href="@Url.Action("ManageUsers", "Home")">
                                    <i class="bi bi-people me-2"></i>
                                    Manage Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "ApplicationOptions" ? "active bg-primary text-white" : "text-secondary")"
                                   href="@Url.Action("Index", "ApplicationOptions")">
                                    <i class="bi bi-gear-fill me-2"></i>
                                    Application Options
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "StockAdjustment" ? "active bg-primary text-white" : "text-secondary")"
                               href="@Url.Action("Create", "StockAdjustment")">
                                <i class="bi bi-box-seam me-2"></i>
                                Stock Adjustment
                            </a>
                        </li>
                        @if (AOSmith.Helpers.SessionHelper.IsApprover())
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Approval" ? "active bg-primary text-white" : "text-secondary")"
                                   href="@Url.Action("Index", "Approval")">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Approval
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Main Content Area -->
            <!-- Wraps Navbar + Content -->
            <!-- d-flex flex-column min-vh-100 ensures full height and sticky footer -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-0 d-flex flex-column min-vh-100">

                <!-- Top Navbar (Inside Main Content) -->
                <nav class="navbar navbar-expand-lg navbar-white bg-white shadow-sm sticky-top px-4">
                    <div class="container-fluid p-0">
                        <!-- Mobile Toggle -->
                        <button class="btn btn-outline-secondary d-md-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                            <i class="bi bi-list"></i>
                        </button>

                        <!-- Brand (Mobile Only) -->
                        <a class="navbar-brand fw-bold d-md-none" href="#">Admin Panel</a>

                        <!-- Right Side Menu -->
                        <div class="d-flex ms-auto align-items-center">
                            <div class="me-3 d-none d-lg-block">
                                <span class="text-muted small">Company:</span>
                                <span class="fw-bold text-primary">@AOSmith.Helpers.SessionHelper.GetCompanyName()</span>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-link text-decoration-none dropdown-toggle d-flex align-items-center gap-2" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                                    <span class="text-dark">Hi, <strong>@AOSmith.Helpers.SessionHelper.GetUserName()</strong></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Page Content -->
                <!-- flex-grow-1 pushes footer down -->
                <div class="px-4 py-4 flex-grow-1">
                    @RenderBody()
                </div>

                <!-- Footer -->
                <footer class="py-3 px-4 text-center text-muted border-top bg-white mt-auto">
                    <small>&copy; @DateTime.Now.Year - Admin Dashboard</small>
                </footer>
            </main>

        </div>
    </div>

    <!-- jQuery (Local) -->
    <script src="@Url.Content("~/Scripts/jquery-3.7.1.min.js")"></script>

    <!-- Bootstrap 5 JS Bundle (Local) -->
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.js")"></script>

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
